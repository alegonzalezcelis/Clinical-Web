<header class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-md z-50 shadow-sm">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-lg">K</span>
        </div>
        <span class="text-xl font-bold text-gray-800">KinesioVital</span>
      </div>
      
      <div class="hidden md:flex items-center space-x-8">
        <a href="#inicio" class="text-gray-700 hover:text-blue-600 transition-colors">Inicio</a>
        <a href="#servicios" class="text-gray-700 hover:text-blue-600 transition-colors">Servicios</a>
        <a href="#nosotros" class="text-gray-700 hover:text-blue-600 transition-colors">Nosotros</a>
        <a href="#contacto" class="text-gray-700 hover:text-blue-600 transition-colors">Contacto</a>
        <button class="bg-blue-600 text-white px-6 py-2 rounded-full hover:bg-blue-700 transition-colors">
          Reservar Cita
        </button>
      </div>
      
      <button class="md:hidden p-2" id="mobile-menu-toggle">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <div class="md:hidden mt-4 pb-4 hidden" id="mobile-menu">
      <div class="space-y-2">
        <a href="#inicio" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">Inicio</a>
        <a href="#servicios" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">Servicios</a>
        <a href="#nosotros" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">Nosotros</a>
        <a href="#contacto" class="block py-2 text-gray-700 hover:text-blue-600 transition-colors">Contacto</a>
        <button class="w-full bg-blue-600 text-white py-2 rounded-full hover:bg-blue-700 transition-colors mt-4">
          Reservar Cita
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  const toggleButton = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  toggleButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
