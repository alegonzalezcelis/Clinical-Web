<header
  class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-md z-50 shadow-sm"
>
  <style>
    .menu-link {
      position: relative;
      font-weight: 500;
    }

    .menu-link::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: -4px;
      left: 0;
      background-color: var(--color-aqua, #4fd1c5);
      visibility: hidden;
      transform: scaleX(0);
      transition: all 0.3s ease-in-out;
    }

    .menu-link:hover::before {
      visibility: visible;
      transform: scaleX(1);
    }
  </style>

  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div
          class="w-8 h-8 bg-ColorAqua rounded-lg flex items-center justify-center"
        >
          <span class="text-white font-bold text-lg">K</span>
        </div>
        <span class="text-xl font-bold text-gray-800">KinesioVital</span>
      </div>

      <!-- Menú de navegación Desktop -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="#inicio"
          class="menu-link text-gray-700 hover:text-ColorAqua transition-all"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="menu-link text-gray-700 hover:text-ColorAqua transition-all"
          >Servicios</a
        >
        <a
          href="#nosotros"
          class="menu-link text-gray-700 hover:text-ColorAqua transition-all"
          >Nosotros</a
        >
        <a
          href="#contacto"
          class="menu-link text-gray-700 hover:text-ColorAqua transition-all"
          >Contacto</a
        >
        <button
          class="bg-ColorAqua text-white px-6 py-2 rounded-full hover:bg-ColorAquaHover transition-colors"
        >
          Reservar Cita
        </button>
      </div>

      <!-- Botón de menú móvil -->
      <button
        class="md:hidden p-2"
        id="mobile-menu-toggle"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>

    <!-- Menú móvil (sin efectos hover) -->
    <div
      class="md:hidden mt-4 pb-4 hidden"
      id="mobile-menu"
    >
      <div class="space-y-2">
        <a
          href="#inicio"
          class="block py-2 text-gray-700"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="block py-2 text-gray-700"
          >Servicios</a
        >
        <a
          href="#nosotros"
          class="block py-2 text-gray-700"
          >Nosotros</a
        >
        <a
          href="#contacto"
          class="block py-2 text-gray-700"
          >Contacto</a
        >
        <button
          class="w-full bg-ColorAqua text-white py-2 rounded-full hover:bg-ColorAquaHover transition-colors mt-4"
        >
          Reservar Cita
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  const toggleButton = document.getElementById("mobile-menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");

  toggleButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });
</script>
