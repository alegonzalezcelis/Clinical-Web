<header class="bg-white shadow-sm fixed top-0 left-0 right-0 z-50">
  <div class="container mx-auto px-10 py-4 max-w-full">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div
          class="w-8 h-8 bg-ColorAqua rounded-lg flex items-center justify-center"
        >
          <span class="text-white font-bold text-lg">K</span>
        </div>
        <span class="text-xl font-bold text-ColorTitle">KinesioVital</span>
      </div>

      <!-- Menú de navegación Desktop -->
      <div class="hidden md:flex space-x-8">
        <a
          href="#inicio"
          class="text-gray-700 hover:text-ColorAqua transition-colors"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="text-gray-700 hover:text-ColorAqua transition-colors"
          >Servicios</a
        >
        <a
          href="#nosotros"
          class="text-gray-700 hover:text-ColorAqua transition-colors"
          >Nosotros</a
        >
        <a
          href="#contacto"
          class="text-gray-700 hover:text-ColorAqua transition-colors"
          >Contacto</a
        >
      </div>

      <!-- Botón CTA Desktop -->
      <div class="hidden md:block">
        <a
          href="https://agendapro.com/mp/cl/entrenamiento-melipilla"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-ColorAqua text-white px-6 py-2 rounded-full hover:bg-ColorAquaHover transition-colors"
        >
          Reservar Cita
        </a>
      </div>

      <!-- Botón menú móvil -->
      <button class="md:hidden p-2">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</header>
