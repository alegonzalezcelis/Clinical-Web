---
import Skeleton from "./Skeleton.astro";

export interface Props {
  title?: string;
  description?: string;
  iconPath?: string; // Cambiamos icon por iconPath para recibir el path del SVG
  isLoading?: boolean;
}

const { title, description, iconPath, isLoading = false } = Astro.props;
---

<div
  class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 animate-on-scroll"
>
  {
    isLoading ? (
      <div class="space-y-4">
        <Skeleton
          width="w-12"
          height="h-12"
          rounded={true}
        />
        <div class="space-y-2">
          <Skeleton
            width="w-3/4"
            height="h-6"
          />
          <Skeleton
            width="w-full"
            height="h-4"
          />
          <Skeleton
            width="w-5/6"
            height="h-4"
          />
        </div>
      </div>
    ) : (
      <div class="space-y-4">
        <div class="w-12 h-12 bg-ColorAqua/10 rounded-full flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-ColorAqua"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d={iconPath}
            />
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-semibold text-ColorTitle mb-2">{title}</h3>
          <p class="text-ColorText leading-relaxed">{description}</p>
        </div>
      </div>
    )
  }
</div>
